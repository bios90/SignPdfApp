<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="TVReg">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sel_white</item>
        <item name="android:text">Ок</item>
        <item name="android:fontFamily">@font/monmedium</item>
    </style>

    <style name="TVReg.Xxs" parent="TVReg">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="TVReg.Xs" parent="TVReg">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="TVReg.S" parent="TVReg">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TVReg.M" parent="TVReg">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TVReg.L" parent="TVReg">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TVReg.Xl" parent="TVReg">
        <item name="android:textSize">18dp</item>
    </style>


    <style name="TVSemi">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sel_white</item>
        <item name="android:text">Ок</item>
        <item name="android:fontFamily">@font/monsemibold</item>
    </style>


    <style name="TVSemi.Xxs" parent="TVSemi">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="TVSemi.Xs" parent="TVSemi">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="TVSemi.S" parent="TVSemi">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TVSemi.M" parent="TVSemi">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TVSemi.L" parent="TVSemi">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TVSemi.Xl" parent="TVSemi">
        <item name="android:textSize">18dp</item>
    </style>


    <style name="TVBold">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sel_white</item>
        <item name="android:text">Ок</item>
        <item name="android:fontFamily">@font/monbold</item>
    </style>


    <style name="TVBold.Xxs" parent="TVBold">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="TVBold.Xs" parent="TVBold">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="TVBold.S" parent="TVBold">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TVBold.M" parent="TVBold">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TVBold.L" parent="TVBold">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TVBold.Xl" parent="TVBold">
        <item name="android:textSize">18dp</item>
    </style>


    <style name="IconTv">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sel_white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/fawsolid</item>
    </style>


    <style name="IconTv.Xxs" parent="IconTv">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="IconTv.Xs" parent="IconTv">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="IconTv.S" parent="IconTv">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="IconTv.M" parent="IconTv">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="IconTv.L" parent="IconTv">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="IconTv.Xl" parent="IconTv">
        <item name="android:textSize">20dp</item>
    </style>


    <style name="EditText">
        <item name="android:fontFamily">@font/monmedium</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/rounded_white_gray_stroke</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/gray4</item>
    </style>


    <style name="Btn">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/monextrabold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Btn.Xs" parent="Btn">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="Btn.Sm" parent="Btn">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Btn.Md" parent="Btn">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Btn.Lg" parent="Btn">
        <item name="android:textSize">16dp</item>
    </style>


    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorBorder">@color/orangeBase</item>
        <item name="colorOn">@color/orangeBase</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/monbold</item>
        <item name="android:showText">true</item>
        <item name="textOff">Нет</item>
        <item name="textOn">Да</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:fontFamily">@font/monbold</item>
        <item name="android:textColor">@color/sel_radio</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:button">@null</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="RadioButton.Right" parent="RadioButton">
        <item name="android:background">@drawable/radio_right_green</item>
    </style>

    <style name="RadioButton.Left" parent="RadioButton">
        <item name="android:background">@drawable/radio_left_red</item>
    </style>

    <style name="RadioButton.Middle" parent="RadioButton">
        <item name="android:background">@drawable/radio_middle_blue</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="android:colorControlNormal">@color/blue</item>
    </style>

</resources>
