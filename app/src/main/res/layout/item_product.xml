<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:elevation="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_gray0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/root_view"

        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_position"

            android:text="1"
            android:textColor="@color/orangeBase"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/TVSemi.L"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/tv_material"

            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/tv_delete"
            android:layout_toRightOf="@id/tv_position"
            android:gravity="left"
            tools:text="KFC-Красная Пресня"
            android:textColor="@color/gray4"
            style="@style/TVSemi.M"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_info"

            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/tv_delete"
            android:layout_toRightOf="@id/tv_position"
            android:layout_below="@id/tv_material"
            android:gravity="left"
            android:text="Ш - 155 | В - 220 | К-во : 5 | Сумма : 5100"
            android:textColor="@color/gray3"
            style="@style/TVReg.S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_delete"

            android:layout_alignParentRight="true"
            android:text="@string/ic_times"
            android:textColor="@color/redBase"
            style="@style/IconTv.M"
            android:layout_width="32dp"
            android:layout_height="32dp" />




    </RelativeLayout>

</android.support.v7.widget.CardView>