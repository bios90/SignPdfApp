<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/rounded_gray0"
    android:elevation="4dp"
    app:cardCornerRadius="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_header"

                android:gravity="center"
                style="@style/TVSemi.M"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_top_black"
                android:padding="6dp"
                tools:text="77-47826 22.05.2018 Cочи"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_status_1"

                android:text="@string/ic_tick"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/oval_green"
                style="@style/IconTv.Xxs"
                android:layout_width="22dp"
                android:layout_height="22dp" />



            <TextView
                android:id="@+id/tv_status_0"

                android:layout_alignParentRight="true"
                android:text="@string/ic_sync"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/oval_red"
                style="@style/IconTv.Xxs"
                android:layout_width="22dp"
                android:layout_height="22dp" />


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/gray4"
                android:padding="4dp"
                style="@style/TVReg.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:text="Заказчик"
                android:textAlignment="center" />
            
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/orangeBase"
                android:text="@string/ic_user"
                style="@style/IconTv.M"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="32dp" />


            <TextView
                android:id="@+id/tv_fio"

                android:textColor="@color/black"
                android:padding="4dp"
                style="@style/TVSemi.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:text="Пупкин Василий Андреевич"
                android:textAlignment="center" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/gray4"
                android:padding="4dp"
                style="@style/TVReg.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:text="Телефон"
                android:textAlignment="center" />

            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/orangeBase"
                android:text="@string/ic_phone"
                style="@style/IconTv.M"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/tv_phone"

                android:textColor="@color/blue"
                android:padding="4dp"
                style="@style/TVSemi.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:text="+79167027324"
                android:textAlignment="center" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/gray4"
                android:padding="4dp"
                style="@style/TVReg.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:text="Адрес"
                android:textAlignment="center" />

            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/orangeBase"
                android:text="@string/ic_adress"
                style="@style/IconTv.M"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/tv_adress"

                android:textColor="@color/black"
                android:padding="4dp"
                style="@style/TVSemi.S"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:text="Сочи ул Сторителей 25"
                android:textAlignment="center" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/gray4"
                android:padding="4dp"
                style="@style/TVReg.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:text="Дата"
                android:textAlignment="center" />

            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/orangeBase"
                android:text="@string/ic_date"
                style="@style/IconTv.M"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/tv_date"

                android:textColor="@color/black"
                android:padding="4dp"
                style="@style/TVSemi.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:text="22 августа 2019"
                android:textAlignment="center" />

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_delete"

                android:layout_marginRight="5dp"
                android:textColor="@color/sel_red"
                style="@style/Btn.Sm"
                android:text="Удалить"
                android:background="@drawable/btn_empty_red_rounded"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="28dp" />


            <Button
                android:id="@+id/btn_send"

                android:layout_marginLeft="5dp"
                android:textColor="@color/sel_white"
                style="@style/Btn.Sm"
                android:text="Отправить"
                android:background="@drawable/btn_grad_orange_rounded"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="28dp" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>