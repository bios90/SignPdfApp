<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/rounded_gray0"
    android:elevation="4dp">

    <RelativeLayout
        android:id="@+id/root_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/tv_position"

            style="@style/TVSemi.L"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="1"
            android:textColor="@color/orangeBase" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_delete"
            android:layout_toRightOf="@id/tv_position"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_text"

                android:layout_gravity="center_vertical"
                android:layout_weight="40"
                style="@style/TVSemi.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="left"
                android:textColor="@color/gray4"
                tools:text="KFC-Красная Пресня" />


            <TextView
                android:id="@+id/tv_price"

                android:layout_gravity="center_vertical"
                android:layout_weight="24"
                style="@style/TVSemi.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="6dp"
                android:textColor="@color/green"
                tools:text="4500 000" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_delete"

            style="@style/IconTv.M"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:text="@string/ic_times"
            android:textColor="@color/redBase" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>