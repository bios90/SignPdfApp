<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"

            style="@style/TVSemi.L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/gray5"
            tools:text="Василий Пупкин" />

        <TextView
            android:id="@+id/tv_email"

            style="@style/TVReg.S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/gray4"
            tools:text="bios90@mail.ru" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/IconTv.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:text="@string/ic_lock_open"
                android:textColor="@color/gray4" />


            <TextView
                android:id="@+id/tv_role"

                style="@style/TVReg.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="60"
                android:gravity="left"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/gray5"
                tools:text="Повар" />


            <TextView
                style="@style/IconTv.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:text="@string/ic_file_pdf"
                android:textColor="@color/gray4" />


            <TextView
                android:id="@+id/tv_docs_count"

                style="@style/TVReg.M"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="60"
                android:gravity="left"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/gray5"
                tools:text="16 договоров" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>